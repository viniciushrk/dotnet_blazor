
<MudText Typo="Typo.h3" GutterBottom="true">Contador</MudText>
<MudText Class="mb-4">Current count: @Contador</MudText>
<MudButton Color="Color.Primary" Variant="Variant.Filled" @onclick="IncrementCount">Clique aqui!</MudButton>



@code {
    [Parameter]
    private int Contador { get; set; }

    [Parameter]
    private int Incremento{ get; set; }

    private void IncrementCount()
    {
        Contador += Incremento;
    }
}
